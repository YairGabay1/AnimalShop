@model PetShopApplication.Models.DetailViewModel
@{
	ViewData["Title"] = "Detail Page";
}


<section class="vh-100" style="background-color: #f4f5f7;">
	<div class="container py-5 h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col col-lg-6 mb-4 mb-lg-0">
				<div class="card mb-3" style="border-radius: .5rem;">
					<div class="row g-0">
						<div class="col-md-4 gradient-custom text-center text-white"
							 style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
							<img src="@Model.Animal!.ImageUrl"
								 alt="Avatar" class="img-fluid my-5" style="height:80px" width:80px />
							<i class="far fa-edit mb-5"></i>
						</div>
						<div class="col-md-8">
							<div class="card-body p-4">
								<h6>Information</h6>
								<hr class="mt-0 mb-4">
								<div class="row pt-1">
									<div class="col-6 mb-3">
										<h6>Name</h6>
										<p class="text-muted">@Model.Animal!.Name</p>
									</div>
									<div class="col-6 mb-3">
										<h6>Age</h6>
										<p class="text-muted">@Model.Animal!.Age</p>
									</div>
								</div>
								<hr class="mt-0 mb-4">
								<div class="row pt-1">
									<div class="col-6 mb-3">
										<h6>Description</h6>
										<p class="text-muted">@Model.Animal.Description</p>
									</div>
									<div class="col-6 mb-3">
										<h6>Category Name</h6>
										<p class="text-muted">@Model.AnimalCategory</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<form method="post">
		<div class="input-group mb-3">
			<input name="Animal" type="hidden" value="@Model.Animal.AnimalId" />
			<input name="CommentMessage" type="text" class="form-control" placeholder="Add you comments here and press submit" aria-label="" aria-describedby="basic-addon1">
			<div class="input-group-prepend">
				<button class="btn btn-secondary" type="submit">Submit</button>
			</div>
		</div>
	</form>


	<ul class="list-group  float-left">
		@foreach (var item in Model.AnimalComments!)
		{
			<li class="list-group-item">@item.CommentMassage</li>
		}
	</ul>
</section>




