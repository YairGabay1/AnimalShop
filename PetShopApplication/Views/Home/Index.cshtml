@model IEnumerable<PetShopApplication.Models.Animal>
@{
	ViewData["Title"] = "HomePage";
}

	<div class="container">
		<h1 class="text-center">Hello</h1>

		<h3 class="text-center">The two most highly rated pets today are:</h3>

	</div>

<div class="container">
  <div class="row">

   @foreach (var animal in Model) 
   {
  
    <div class="col-md-3 mt-3">
      <div class="card">
        <div class="card-body">
           <img src="@animal.ImageUrl"class="card-img-top" width=300 height=300>
           <h5 class="card-title font-weight-bold  ">Name: @animal.Name</h5>
           <p class="card-text">Age: @animal.Age </p>
	       <a role="button" class="btn btn-primary" style="width:220px" asp-controller="Catalog" asp-action="DetailPage" asp-route-id="@animal.AnimalId">Show Details</a>
        </div>
      </div>
    </div>
    
    }

  </div>
</div>